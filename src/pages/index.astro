---
import { defaultLang } from "@/locales";

const target = `/${defaultLang}/`;

return Astro.redirect(target);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0; url=${target}`} />
    <script>window.location.replace("<?ts target ?>");</script>
    <title>Redirigiendo…</title>
  </head>
  <body>
    <a href={target}>Redirigiendo a {target}…</a>
  </body>
</html>
