---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Hero from "@/sections/Hero.astro";
import Historia from "@/sections/Historia.astro";
import Detalles from "@/sections/Detalles.astro";
import Galeria from "@/sections/Galeria.astro";
import Registro from "@/sections/Registro.astro";
import Hospedaje from "@/sections/Hospedaje.astro";
import Footer from "@/components/Footer.astro";

import { LANGUAGES, defaultLang, type AppLocale } from '@/locales';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const { lang = defaultLang } = Astro.params as { lang: AppLocale };
const t = LANGUAGES[lang].translations;
---

<Layout>
  <Header t={t.header} />
  <main>
    <div class="main-background">
      <Hero t={t.hero} />
      <Historia t={t.historia} />
    </div>
    <Detalles t={t.detalles} />
    <div class="main-background">
      <Galeria t={t.galeria} />
      <Registro t={t.registro} />
    </div>
    <Hospedaje t={t.hospedaje} />
    <Footer t={t.footer} />
  </main>
</Layout>

<style>
  .main-background {
    background-image: url("/images/png/background-texture.png");
    background-position: top center;
    background-size: cover;
    background-repeat: no-repeat;
  }
</style>
