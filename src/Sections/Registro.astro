---
// src/sections/Registro.astro
import Title from "@/components/Title.astro";
import Button from "@/components/Button.astro";
import RsvpForm from "@/components/forms/RsvpForm.astro";

import Facebook from '@/icons/Facebook.astro';
import Instagram from '@/icons/Instagram.astro';
import Mail from '@/icons/Mail.astro';
import TikTok from '@/icons/TikTok.astro';
---

<section id="registro" class="container animate-on-scroll">
  <Title
    text="Compartamos este momento tan especial"
    color="brown"
    class="anim-item"
  />

  <div class="content-wrapper">
    <RsvpForm />

    <div class="contact-info anim-item">
      <Title text="Contáctanos" color="brown" />
      <div class="buttons-wrapper">
        <Button
          text="Contactar al novio"
          href="https://wa.link/fdo4fu"
          color="brown"
          variant="primary"
        />
        <Button
          text="Contactar a la novia"
          href="https://wa.link/fdo4fu"
          color="brown"
          variant="secondary"
        />
      </div>
      <div class="social-media">
        <p>También puedes encontrarnos en:</p>
        <div class="social-icons">
          <a href="https://www.linkedin.com/in/alejandro-canek?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app" aria-label="Facebook" target="_blank"><Facebook /></a>
          <a href="https://www.instagram.com/alejandrocanek?igsh=MXB4eWxpa3BrdHI2NQ==" aria-label="Instagram" target="_blank"><Instagram /></a>
          <a href="mailto:alejandro.canek.dev@gmail.com?subject=Boda%20Mar%C3%ADa%20y%20Jos%C3%A9&body=Hola%2C%20quiero%20hablar%20sobre%20la%20boda%20%F0%9F%A4%B5%F0%9F%8F%BC%E2%80%8D%E2%99%82%EF%B8%8F%F0%9F%91%B0%F0%9F%8F%BC" aria-label="Correo electrónico" target="_blank"><Mail /></a>
          <a href="https://www.tiktok.com/es/" target="_blank" rel="noopener noreferrer" aria-label="Tik Tok"><TikTok className="icon"/></a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>

  #registro {
    padding-top: 2rem;
    z-index: 2;
  }

  .content-wrapper {
    width: 100%;
    display: flex;
    gap: 3rem;
    align-items: center;
    justify-content: space-between;
    margin-top: 2rem;
  }

  .content-wrapper > * {
    flex: 1;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 4rem;
  }

  .buttons-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 500px;
  }

  .contact-info p {
    font-weight: bold;
  }

  .social-media {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    color: var(--color-gray);
  }

  .social-icons {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .social-icons a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    padding: 10px;
    color: var(--color-brown);
    background-color: rgba(195, 147, 124, 0.2);
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .icon {
    color: var(--color-brown);
  }

  .social-icons a:hover {
    color: var(--color-white);
    background-color: var(--color-brown);
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }

  @media (max-width: 900px) {
    .content-wrapper {
      flex-direction: column;
      align-items: center;
      gap: 4rem;
    }

    .contact-info {
      gap: 2rem;
      width: 100%;
    }

    .social-icons {
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
    }
  }
</style>
