---
import Title from "@/components/Title.astro";
import Card from "@/components/Card.astro";
import CardsContainer from "@/components/CardsContainer.astro";

const { t } = Astro.props;
---

<section
  id="detalles"
  class="container container-before-gradient container-after-gradient animate-on-scroll"
>
  <Title text={t.titulo} color="brown" class="anim-item" />

  <div class="cards-container">
    <CardsContainer>
      {
        t.cards.map((card: any, index: number) => (
          <Card
            title={card.title}
            description={card.description}
            linkText={card.linkText}
            href={card.href}
            type="detalles"
            color="brown"
            class="anim-item"
            animationDelayIndex={index}
          />
        ))
      }
    </CardsContainer>
  </div>
</section>
