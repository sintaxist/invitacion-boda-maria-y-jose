---
import Decoration from "@/components/Decoration.astro";
---

<section id="inicio" class="containerHero animate-on-scroll">
  <article>
    <div class="titleContainer">
      <div class="decoration-wrapper anim-item">
        <Decoration />
      </div>
      <h4 class="anim-item">¡Nos casamos!</h4>
      <h1 class="anim-item">María y José</h1>
      <h4 class="anim-item">18 de Octubre del 2025</h4>
      <span class="line-divider anim-item"></span>
      <div id="countdown-timer" class="countdown-timer anim-item">
        00d : 00h : 00m : 00s
      </div>
      <span class="line-divider anim-item"></span>
      <div class="decoration-wrapper anim-item">
        <Decoration rotate={true} />
      </div>
    </div>
    <div class="imgContainer anim-item">
      <img
        class="imgHero"
        width="1150"
        height="1517"
        src="/images/PNG/MariaJose.png"
        alt="Foto de María y José"
      />
    </div>
  </article>
</section>

<style>
  .containerHero {
    position: relative;
    width: 100%;
    min-height: 100vh;
    padding: 3rem 6%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    overflow: hidden;
    color: var(--color-gray);
    box-sizing: border-box;
  }

  article {
    width: 100%;
    max-width: 1200px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: auto;
  }

  .titleContainer {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    text-align: center;
  }

  .titleContainer h4 {
    font-size: var(--font-4);
    font-weight: normal;
    letter-spacing: 7px;
    text-transform: uppercase;
    text-align: center;
  }

  .titleContainer h1 {
    font-size: var(--font-cursive);
    font-weight: 700;
    color: var(--color-brown);
    text-align: center;
    line-height: 1;
  }

  .imgContainer {
    position: relative;
    width: 50%;
    min-width: 300px;
  }

  .imgHero {
    width: 100%;
    height: auto;
  }

  .countdown-timer {
    color: var(--color-gray);
    font-size: var(--font-3);
    font-weight: bold;
    letter-spacing: 7px;
    text-align: center;
    width: 100%;
    font-variant-numeric: tabular-nums;
  }

  .line-divider {
    width: 100%;
    height: 1px;
    background-color: var(--color-brown);
  }

  /* --- ANIMACIONES --- */
  .containerHero.animate .titleContainer .anim-item:nth-child(1),
  .containerHero.animate .titleContainer .anim-item:nth-child(8) {
    animation-delay: 0s; /* Los decoradores inician de inmediato */
  }

  .containerHero.animate .imgContainer.anim-item {
    animation-delay: 0.3s;
  }

  .containerHero.animate .titleContainer .anim-item:nth-child(2) {
    animation-delay: 0.3s;
  } /* ¡Nos casamos! */
  .containerHero.animate .titleContainer .anim-item:nth-child(3) {
    animation-delay: 0.4s;
  } /* Nombres */
  .containerHero.animate .titleContainer .anim-item:nth-child(4) {
    animation-delay: 0.5s;
  } /* Fecha */
  .containerHero.animate .titleContainer .anim-item:nth-child(5) {
    animation-delay: 0.6s;
  } /* Línea 1 */
  .containerHero.animate .titleContainer .anim-item:nth-child(6) {
    animation-delay: 0.7s;
  } /* Contador */
  .containerHero.animate .titleContainer .anim-item:nth-child(7) {
    animation-delay: 0.8s;
  } /* Línea 2 */

  /* --- MEDIA QUERIES --- */
  @media (max-width: 900px) {
    .containerHero {
      padding-top: 120px;
    }

    article {
      flex-direction: column;
      gap: 3.5rem;
    }

    .titleContainer {
      width: 100%;
      gap: 1.7rem;
    }

    .imgContainer {
      width: 80%;
      max-width: 400px;
    }

    .line-divider {
      max-width: 400px;
    }

    .titleContainer h1 {
      font-size: var(--font-1);
    }
    .titleContainer h4 {
      font-size: var(--font-5);
      letter-spacing: 5px;
    }
    .countdown-timer {
      font-size: var(--font-4);
      letter-spacing: 5px;
    }
  }

  @media (max-width: 900px) {
    article {
      flex-direction: column;
      gap: 2rem;
    }

    .countdown-timer {
      font-size: var(--font-5);
    }
  }
</style>

<script>
  const countdownDate = new Date("Oct 18, 2025 23:59:59").getTime();

  const timerEl = document.getElementById("countdown-timer");

  const countdownFunction = setInterval(() => {
    if (!timerEl) {
      clearInterval(countdownFunction);
      return;
    }

    const now = new Date().getTime();
    const distance = countdownDate - now;

    if (distance < 0) {
      clearInterval(countdownFunction);
      timerEl.innerHTML = "¡El día ha llegado!";
      return;
    }

    // Cálculos de tiempo
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor(
      (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    // Usamos .padStart(2, '0') para asegurar que siempre haya dos dígitos
    const daysFormatted = String(days).padStart(2, "0");
    const hoursFormatted = String(hours).padStart(2, "0");
    const minutesFormatted = String(minutes).padStart(2, "0");
    const secondsFormatted = String(seconds).padStart(2, "0");

    // Construimos el string final y lo insertamos en el HTML
    timerEl.innerHTML = `${daysFormatted}d : ${hoursFormatted}h : ${minutesFormatted}m : ${secondsFormatted}s`;
  }, 1000);
</script>
