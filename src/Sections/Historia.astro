---
import Title from "@/components/Title.astro";

const { t } = Astro.props;
---

<section id="historia" class="container animate-on-scroll">
  <img 
    src="/images/SVG/aside-decoration-2.svg" 
    alt="Decoración lateral" 
    class="decoration-aside anim-item" 
  />

  <Title text={t.titulo} color="green" class="anim-item" />

  <p class="anim-item">{t.parrafo1}</p>
  <p class="anim-item">{t.parrafo2}</p>

  <img 
    src="/images/SVG/aside-decoration.svg" 
    alt="Decoración lateral" 
    class="decoration-aside rotate anim-item" 
  />
</section>

<style>
  #historia {
    position: relative;
    padding-top: 0px;
    padding-bottom: calc(6% + 60px);
    overflow: hidden;
  }

  p {
    text-align: center;
    font-size: var(--font-4);
    color: var(--color-gray);
    line-height: 1.6;
    max-width: 800px;
    margin: 0;
  }

  .decoration-aside {
    position: absolute;
    width: 350px;
    left: -150px;
    z-index: -1;
  }

  .decoration-aside:not(.rotate) {
    bottom: 3%;
    top: unset;
  }

  .decoration-aside.rotate {
    top: -1%;
    right: -150px;
    left: inherit;
  }

  /* --- ANIMACIONES --- */

  :global(.animate) p:nth-of-type(1) { animation-delay: 0.4s; }
  :global(.animate) p:nth-of-type(2) { animation-delay: 0.6s; }
  :global(.animate) .decoration-aside { animation-delay: 0.8s; }


  /* --- MEDIA QUERIES --- */
  @media (max-width: 900px) {
    #historia {
      padding: 3rem 6%;
      padding-bottom: calc(6% + 60px);
    }
  
    p { font-size: var(--font-5); }
  
    .decoration-aside { display: none; }
  }
</style>