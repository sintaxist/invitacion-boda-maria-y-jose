---
interface Props {
  text: string;
  color?: 'brown' | 'green';
  class?: string;
}
const { text, color = 'brown', class: className } = Astro.props;
---
<div class:list={["title-wrapper", `is-${color}`, className]}>
  <h2>{text}</h2>
  <span class="title-divider"></span>
</div>

<style>
  .title-wrapper {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: fit-content;
  }

  h2 {
    font-size: var(--font-1);
    line-height: 1.1;
  }

  .title-divider {
    margin-top: 5px;
    width: 90%;
    height: 2px;
  }
  .title-wrapper.is-brown h2{
    color: var(--color-brown);
  }

  .title-wrapper.is-brown .title-divider {
    background-color: var(--color-brown);
  }

  .title-wrapper.is-green h2 {
    color: var(--color-green);
  }

  .title-wrapper.is-green .title-divider {
    background-color: var(--color-green);
  }

  /* --- MEDIA QUERIES --- */

  @media (max-width: 900px) {
    h2 { font-size: var(--font-2); }
  }
</style>